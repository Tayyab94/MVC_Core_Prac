@model UserClaimViewModel

<form method="post">
    <div class="card">
        <div class="card-header">
            <h3>Manage USer Claim</h3>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimTyope" />

                    <input  asp-for="@Model.Claims[i].IsSelected" class="form-check-input"/>
                    <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">@Model.Claims[i].ClaimTyope</label>
                </div>

            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-outline-success"  style="width:auto"/>

            <a asp-action="EditUser" asp-route-id="@Model.UserId" class="btn btn-primary">
                Cancel
            </a>
        </div>
    </div>
</form>