@model EditRoleViewModel

@{
    ViewBag.Title = "Edit-Role";
}


<h2>Edit Role</h2>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input disabled asp-for="Id" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button class="btn btn-success" type="submit">Edit Role</button>

            <a asp-action="ShowAllRoles" asp-controller="AdminRole" class="btn btn-warning">Cancel</a>
        </div>
    </div>
</form>

<div class="card">
    <div class="card-header">
        <h3>Add or Remove the Users form this Role</h3>
    </div>
    <div class="card-body">
        <a asp-action="EditUserRole" asp-controller="AdminRole" asp-route-RoleId="@Model.Id">Add User into this Role</a>
    </div>
    <div>

    </div>
</div>