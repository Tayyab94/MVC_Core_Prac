
@model RoleViewModel
@{
    ViewBag.Title = "login";

}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="CreateRole" asp-controller="AdminRole" method="post">
                <div asp-validation-summary="All" class="text-danger">

                </div>
                <div class="form-group">
                    <label asp-for="RoleName"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName"></span>
                </div>

                <input type="submit" class="btn btn-primary" value="Crete Role" />
            </form>
        </div>
    </div>
</div>